{
    "version": 1,
    "formatters": {
		"short": {
			"format": "[TIME]: %(asctime)s - [LEVEL]: %(levelname)s - [DESCRIPTION]: %(message)s"
		},
		"detailed": {
			"format": "[TIME]: %(asctime)s - [LEVEL]: %(levelname)s - [PROC_ID]: %(process)d - [PATH]: %(pathname)s - [MODULE]: %(module)s - [LINE]: %(lineno)d - [DESCRIPTION]: %(message)s"
		}
	},
    "handlers": {
        "console": {
            "level": "DEBUG",
            "formatter": "short",
            "class": "logging.StreamHandler"
        },
        "issues": {
            "level": "ERROR",
            "formatter": "detailed",
            "filename": "./log/issues.log",
            "class": "logging.FileHandler"
        },
        "purpleair_report": {
            "level": "DEBUG",
            "formatter": "short",
            "filename": "./log/purpleair/report.log",
            "class": "logging.FileHandler"
        },
        "geonames_report": {
            "level": "DEBUG",
            "formatter": "short",
            "filename": "./log/geonames/report.log",
            "class": "logging.FileHandler"
        },
        "opwmap_report": {
            "level": "DEBUG",
            "formatter": "short",
            "filename": "./log/openweathermap/report.log",
            "class": "logging.FileHandler"
        },
        "purp_update_report": {
            "level": "DEBUG",
            "formatter": "short",
            "filename": "./log/purp_update/report.log",
            "class": "logging.FileHandler"
        }
    },
    "loggers": {
        "": {
            "level": "DEBUG",
            "handlers": ["console", "issues"],
            "propagate": false
        },
        "airquality.usecase.add_places": {
            "level": "DEBUG",
            "handlers": ["geonames_report"],
            "propagate": true
        },
        "airquality.usecase.add_fixed_sensors": {
            "level": "DEBUG",
            "handlers": ["purpleair_report"],
            "propagate": true
        },
        "airquality.usecase.add_weather_data": {
            "level": "DEBUG",
            "handlers": ["opwmap_report"],
            "propagate": true
        },
        "airquality.usecase.update_purpleair_location": {
            "level": "DEBUG",
            "handlers": ["purp_update_report"],
            "propagate": true
        }
    }
}
