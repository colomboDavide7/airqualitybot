{
    "version": 1,
    "formatters": {
        "short": {
            "format": "%(asctime)s %(levelname)s %(name)s: %(message)s"
        },
        "longer": {
            "format": "%(levelname)s at %(asctime)s: In %(filename)s in call %(funcName)s at line %(lineno)s => %(message)s"
        }
    },
    "handlers": {
        "info_log_console": {
            "level": "INFO",
            "formatter": "short",
            "class": "logging.StreamHandler"
            },
        "info_log_file": {
            "level": "INFO",
            "formatter": "short",
            "filename": "log/infos.log",
            "class": "logging.FileHandler"
        },
        "error_log_file": {
            "level": "ERROR",
            "formatter": "longer",
            "filename": "log/errors.log",
            "class": "logging.FileHandler"
        }
    },
    "loggers": {
        "": {
            "level": "INFO",
            "handlers": ["info_log_console", "info_log_file", "error_log_file"],
            "propate": false
        }
    }
}
